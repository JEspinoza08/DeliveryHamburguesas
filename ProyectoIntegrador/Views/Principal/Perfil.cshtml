@using Entity.LogOn;
@{
    Usuario eUsuario = ((Usuario)Session["Session_Login"]);
}
@{
    Layout = null;
}
@{
    string perfil = "";
    if (@eUsuario.IDPERF == 1)
    {
        perfil = "Cliente";
    }
    else
    {
        perfil = "Administrador";
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Perfil</title>
    @Scripts.Render("~/Scripts/jquery-3.3.1.js")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/sweetalert.min.js")
    @Styles.Render("~/Content/bootstrap.min.css")
    <link href="~/Content/css/principal.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/js/registrate.js"></script>
</head>
<body>
    <div>
        <nav class="nav_gral">
            <div class="logo">
                <img src="~/Img/cerdito.png" alt="">
            </div>
            <ul class="nav_links">
                <li style="font-size:20px !important;color:#CD6E2E;font-weight:bold; font-family: 'Poppins', sans-serif;">@eUsuario.NOMBRES</li>
                <li><a href="~/Principal/Principal">Inicio</a></li>
                <li><a href="~/Principal/Promociones">Promociones</a></li>
                <li><a href="~/Principal/Nosotros">Mis Órdenes</a></li>
                @if (ViewBag.perfil == 2)
                {
                <li><a href="~/Principal/OrdenesGlobales">Órdenes globales</a></li>
                }
                <li><a href="~/Principal/Perfil">Mi Perfil</a></li>
                <li><a href="~/LogOn/CerrarSesion">Cerrar Sesión</a></li>
            </ul>
            <div class="burger">
                <div class="line1"></div>
                <div class="line2"></div>
                <div class="line3"></div>
            </div>
        </nav>
    </div>
    <div class="registrar-box">
        <input style="display:none;" type="text" name="nombres" value="@eUsuario.ID" id="id_usuario_perfil" disabled/>
        <div>
            <div style="display:inline-block;margin-left:30px;">
                <label><i class="fa fa-align-left" aria-hidden="true"></i> Nombres</label>
                <input type="text" name="nombres" value="@eUsuario.NOMBRES" id="nombre_usuario_perfil" placeholder="Ingrese nombres"/>
            </div>
            <div style="display:inline-block;margin-left:100px;">
                <label><i class="fa fa-envelope" aria-hidden="true"></i> Email</label>
                <input type="text" name="email" value="@eUsuario.EMAIL" id="email_usuario_perfil" autocomplete="off" placeholder="Ingrese email (No obligatorio)"/>
            </div>
        </div>
        <div>
            <div style="display:inline-block;margin-left:30px;">
                <label><i class="fa fa-mobile" aria-hidden="true"></i> Celular</label>
                <input type="text" name="celular" value="@eUsuario.CELULAR" id="celular_usuario_perfil" placeholder="Ingrese número de celular" onkeypress="return check(event)" maxlength="12"/>
            </div>
            <div style="display:inline-block;margin-left:100px;">
                <label><i class="fa fa-map-marker" aria-hidden="true"></i> Dirección</label>
                <input type="text" name="direccion" value="@eUsuario.DIRECCION" id="direccion_usuario_perfil" placeholder="Ingrese dirección"/>
            </div>
            <div style="display:inline-block;margin-left:200px;">
                <img class="img_perfil" src="~/Img/cerditoentero.png" alt="Alternate Text" />
            </div>
        </div>
        <div>
            <div style="display:inline-block;margin-left:30px;">
                <label><i class="fa fa-id-card" aria-hidden="true"></i> DNI</label>
                <input type="text" name="dni" value="@eUsuario.DNI" disabled />
            </div>
            <div style="display:inline-block;margin-left:100px;">
                <label><i class="fa fa-key" aria-hidden="true"></i> Contraseña</label>
                <input type="password" name="password" value="@eUsuario.CONTRASEÑA" id="contraseña_usuario_perfil" autocomplete="new-password" placeholder="Ingrese contraseña" maxlength="25" />
            </div>
            <div style="display:inline-block;">
                <button class="btn btn-warning" type="button" onclick="mostrarContrasena()"><i class="fa fa-eye" aria-hidden="true"></i></button>
            </div>
            <div style="display:inline-block;margin-left:170px;">
                <label>MI PERFIL</label>
            </div>
        </div>
        <div>
            <div style="display:inline-block;margin-left:30px;">
                <label><i class="fa fa-unlock-alt" aria-hidden="true"></i> Perfil</label>
                <input type="text" name="dni" value="@perfil" disabled />
            </div>
            <div style="display:inline-block;margin-left:100px;">
                <input class="registrar_btn" type="submit" name="Actualizar" onclick="fn_actualizar_perfil();" value="Actualizar" />
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/Scripts/js/app.js"></script>
<div id="_load_action" class="modal" role="dialog" tabindex="-1" data-backdrop="static" data-keyboard="false" aria-hidden="false">
    <div class="text-center" style="color: #fff; width: 65px; height: 50px; position: absolute; top: 50%; left: 50%; margin-top: -32.5px; margin-left: -25px;">
        <img src="~/Img/cerdito.png" style="margin-left: -17px;width:100px;height:100px;" />
        <br />
        <small>Cargando</small>
    </div>
</div>